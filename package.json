{
  "name": "threader",
  "version": "0.1.0",
  "description": "Multi-core JavaScript parallelism with TypeScript API and Rust performance",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:rust && vite build",
    "build:rust": "napi build --platform --release",
    "build:ts-only": "tsc",
    "test:ts-only": "npm run build:ts-only && node test-simple.js",
    "build:dev": "npm run build:rust -- --debug && npm run build:ts",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "bench": "node dist/examples/benchmarks.js",
    "clean": "rimraf dist *.node",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run build"
  },
  "keywords": [
    "parallelism",
    "multi-core",
    "workers",
    "rust",
    "typescript",
    "performance",
    "threading",
    "concurrency"
  ],
  "author": "Threader Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/threader.git"
  },
  "dependencies": {
    "@napi-rs/cli": "^2.13.0",
    "vite": "^7.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0"
  },
  "napi": {
    "name": "threader",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-unknown-linux-musl",
        "aarch64-apple-darwin",
        "x86_64-pc-windows-msvc"
      ]
    }
  },
  "files": [
    "dist",
    "workers",
    "*.node",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}
